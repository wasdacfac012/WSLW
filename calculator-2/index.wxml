<view class="container">
  <view class="header">
    <view class="title">计算器</view>
    <view class="subtitle">覆盖常用劳动场景计算</view>
  </view>


  <view class="calculator-list">
    <block wx:for="{{calculators}}" wx:key="name">
      <view class="calculator-item" bindtap="navigateToCalculator" data-url="{{item.url}}">
        <view class="calc-info">
          <view class="calc-name">{{item.name}}</view>
        </view>
        <view class="arrow">></view>
      </view>
    </block>
  </view>
</view>
