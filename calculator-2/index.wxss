/* 首页特定样式 */

/* 图片框样式 */
.image-container {
  width: 100%;
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-image {
  width: 100%;
  max-width: 600rpx;
  border-radius: 8rpx;
}

.image-tip {
  display: block;
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #666;
}

.calculator-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
}

.calculator-item {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 30rpx 25rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
}

.calculator-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.08);
}

.calculator-item:active {
  background-color: #f8f8f8;
  transform: translateY(0);
}

.calc-info {
  flex: 1;
}

.calc-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 响应式设计 */
@media (min-width: 768px) {
  .calculator-item {
    padding: 35rpx 30rpx;
  }
  
  .calc-name {
    font-size: 30rpx;
  }
}
