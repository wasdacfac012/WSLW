/* 合并加班费计算器特定样式 */

.detail-toggle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  margin: 20rpx 0;
  border-top: 1px solid #e0e0e0;
  cursor: pointer;
}

.detail-toggle-text {
  font-size: 28rpx;
  color: #1989fa;
}

.detail-toggle-icon {
  font-size: 24rpx;
  color: #1989fa;
  transition: transform 0.3s ease;
}

.detail-process {
  background-color: #ffffff;
  border: 1px solid #e9ecef;
  border-radius: 8rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  animation: slideDown 0.3s ease-in-out;
  text-align: left;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.detail-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-line;
  font-family: 'Courier New', monospace;
  text-align: left;
}

@keyframes slideDown {
  from {
    opacity: 0;
    max-height: 0;
    padding: 0 30rpx;
  }
  to {
    opacity: 1;
    max-height: 1000rpx;
    padding: 30rpx;
  }
}

.label {
  width: 200rpx;
  font-size: 28rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.input {
  flex: 1;
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 5px;
}

.picker {
  flex: 1;
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 5px;
  background-color: white;
  color: #333;
}

.btn-calculate {
  width: 100%;
  background-color: #07c160;
  color: white;
  margin-top: 20px;
}

.result-area {
  margin-top: 30px;
  padding: 20px;
  background-color: #ffffff;
  border-radius: 5px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.result-value {
  font-size: 24px;
  color: #e64340;
  margin-top: 10px;
  display: block;
}

.btn-copy {
  margin-top: 15px;
  background-color: #1989fa;
  color: white;
  font-size: 14px;
  padding: 8px 20px;
  border-radius: 20px;
  width: auto;
  display: inline-block;
}

.btn-copy:hover {
  background-color: #0570d1;
}
