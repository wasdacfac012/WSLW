/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局样式 - 极简风格，米黄色背景 */
page {
  background-color: #FFF8DC; /* 米黄色 */
}

/* 极简风格通用样式 */
.container {
  background-color: #ffffff;
  padding: 40rpx 20rpx;
  min-height: 100vh;
  border-radius: 8rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.header {
  margin-bottom: 30rpx;
  text-align: center;
  padding: 0 20rpx;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  position: relative;
  display: inline-block;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #4CAF50, #007aff);
  border-radius: 3rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  margin-top: 20rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.input {
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.calculate-btn {
  height: 80rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}

.result-container {
  background-color: #fafafa;
  padding: 30rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-item {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.result-value {
  color: #4CAF50;
  font-weight: bold;
}
