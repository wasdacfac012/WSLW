<view class="container">
  <view class="title">税后工资计算器</view>
  
  <view class="input-group">
    <text class="label">基本工资 (A):</text>
    <input type="digit" class="input" placeholder="元" bindinput="bindKeyInput" data-field="a" />
  </view>

  <view class="input-group">
    <text class="label">奖金 (B):</text>
    <input type="digit" class="input" placeholder="元" bindinput="bindKeyInput" data-field="b" />
  </view>

  <view class="input-group">
    <text class="label">津贴 (C):</text>
    <input type="digit" class="input" placeholder="元" bindinput="bindKeyInput" data-field="c" />
  </view>

  <view class="input-group">
    <text class="label">加班费 (J):</text>
    <input type="digit" class="input" placeholder="元" bindinput="bindKeyInput" data-field="j" />
  </view>

  <view class="input-group">
    <text class="label">缺勤天数 (K):</text>
    <input type="digit" class="input" placeholder="天" bindinput="bindKeyInput" data-field="k" />
  </view>

  <view class="input-group">
    <text class="label">税费 (T):</text>
    <input type="digit" class="input" placeholder="元" bindinput="bindKeyInput" data-field="t" />
  </view>

  <view class="input-group">
    <text class="label">其他扣款 (E):</text>
    <input type="digit" class="input" placeholder="元" bindinput="bindKeyInput" data-field="e" />
  </view>

  <view class="input-group">
    <text class="label">上年度平均工资 (用于计算社保基数):</text>
    <input type="digit" class="input" placeholder="元" bindinput="bindKeyInput" data-field="averageSalary" />
  </view>

  <view class="input-group">
    <text class="label">专项扣除 (子女教育等):</text>
    <input type="digit" class="input" placeholder="元" bindinput="bindKeyInput" data-field="specialDeduction" />
  </view>

  <button class="btn-calculate" bindtap="calculate">计算</button>

  <view class="result-area" wx:if="{{result !== null}}">
    <text class="result-title">税后工资:</text>
    <text class="result-value">{{result}} 元</text>
    <button class="btn-copy" bindtap="copyResult">复制结果</button>
    
    <view class="detail-toggle" bindtap="toggleDetail">
      <text class="detail-toggle-text">{{showDetail ? '收起' : '展开'}}详细计算过程</text>
      <text class="detail-toggle-icon">{{showDetail ? '▲' : '▼'}}</text>
    </view>
    
    <view class="detail-process" wx:if="{{showDetail}}">
      <text class="detail-content">{{detailProcess}}</text>
    </view>
  </view>
</view>
