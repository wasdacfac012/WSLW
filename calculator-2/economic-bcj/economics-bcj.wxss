/* 经济赔偿金计算器特定样式 */

/* 页面容器样式优化 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  text-align: center;
  margin: 20rpx 0 30rpx;
  position: relative;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #1890ff;
  border-radius: 3rpx;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 说明内容样式 */
.explanation {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.explanation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  cursor: pointer;
  border-bottom: 2rpx solid #f0f0f0;
}

.explanation-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.explanation-toggle {
  font-size: 24rpx;
  color: #1890ff;
  display: flex;
  align-items: center;
}

.explanation-toggle::after {
  content: '▼';
  margin-left: 10rpx;
  transition: transform 0.3s ease;
}

.explanation-toggle.active::after {
  transform: rotate(180deg);
}

.explanation-content {
  padding: 0 30rpx 30rpx;
}

.explanation-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 15rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #1890ff;
}

.section-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
  padding: 0 20rpx;
}

/* 输入区域样式 */
.input-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.input-group {
  margin-bottom: 30rpx;
}

.input {
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #fafafa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s;
}

.input:focus {
  border-color: #1890ff;
  box-shadow: 0 0 0 2rpx rgba(24, 144, 255, 0.2);
  outline: none;
}

/* 计算按钮样式 */
.btn-calculate {
  height: 80rpx;
  background-color: #1890ff;
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s;
}

.btn-calculate:active {
  background-color: #40a9ff;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.4);
}

/* 结果区域样式 */
.result-area {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin: 20rpx 0 30rpx;
  display: block;
}

/* 复制按钮样式 */
.btn-copy {
  height: 70rpx;
  background-color: #52c41a;
  color: white;
  font-size: 28rpx;
  padding: 0 30rpx;
  border-radius: 12rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
  transition: all 0.3s;
}

.btn-copy:active {
  background-color: #73d13d;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.4);
}

/* 详细过程切换样式 */
.detail-toggle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0 20rpx;
  margin: 20rpx 0;
  border-top: 2rpx solid #f0f0f0;
  cursor: pointer;
}

.detail-toggle-text {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: bold;
}

.detail-toggle-icon {
  font-size: 24rpx;
  color: #1890ff;
  transition: transform 0.3s ease;
}

.detail-toggle.active .detail-toggle-icon {
  transform: rotate(180deg);
}

/* 详细过程内容样式 */
.detail-process {
  background-color: #fafafa;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  animation: slideDown 0.3s ease-in-out;
  text-align: left;
  border: 2rpx solid #e8e8e8;
}

.detail-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-line;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
  text-align: left;
}

@keyframes slideDown {
  from {
    opacity: 0;
    max-height: 0;
    padding: 0 30rpx;
  }
  to {
    opacity: 1;
    max-height: 2000rpx;
    padding: 30rpx;
  }
}
