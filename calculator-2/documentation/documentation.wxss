/* documentation.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 浮窗提示样式 */
.floating-tip {
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #d48806;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  display: flex;
  align-items: center;
}

.floating-tip::before {
  content: "!";
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background-color: #ffd700;
  border-radius: 50%;
  margin-right: 15rpx;
  font-weight: bold;
}

.tip-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  border-radius: 50%;
  object-fit: cover;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

/* 图片容器样式 */
.image-container {
  text-align: center;
  margin: 30rpx 0;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.image-container:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.content-image {
  width: 100%;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.content-image:active {
  transform: scale(0.98);
}

.image-caption {
  font-size: 26rpx;
  color: #666;
  margin-top: 15rpx;
  font-style: italic;
}

/* 内容样式 */
.content {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.paragraph {
  font-size: 28rpx;
  line-height: 42rpx;
  color: #333;
  margin-bottom: 20rpx;
  text-align: justify;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.section-content {
  font-size: 28rpx;
  line-height: 42rpx;
  color: #333;
  margin-bottom: 15rpx;
  text-align: justify;
}

.section-content.tip {
  background-color: #f0f8ff;
  border-left: 6rpx solid #1890ff;
  padding: 15rpx;
  border-radius: 0 8rpx 8rpx 0;
  font-size: 26rpx;
}
