/* 经济补偿金计算器特定样式 */

/* 浮窗提示样式 */
.floating-tip {
  background-color: #ffffff;
  border-radius: 8px;
  margin-bottom: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.tip-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  cursor: pointer;
}

.tip-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.tip-arrow {
  font-size: 14px;
  color: #1989fa;
  transition: transform 0.3s ease;
}

.tip-content {
  padding: 0 15px 15px 15px;
  animation: slideDown 0.3s ease-in-out;
}

.tip-content.collapsing {
  animation: slideUp 0.3s ease-in-out forwards;
}

.tip-text {
  font-size: 14px;
  line-height: 1.6;
  color: #666;
  white-space: pre-line;
}

/* 新增的结构化内容样式 */
.tip-section {
  margin: 15px 0 10px 0;
}

.tip-section-title {
  font-size: 15px;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5px;
}

.tip-section-desc {
  font-size: 14px;
  line-height: 1.6;
  color: #666;
  display: block;
}

.tip-item {
  display: flex;
  margin-bottom: 8px;
  padding-left: 20px;
}

.tip-item-title {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  min-width: 30px;
}

.tip-item-content {
  font-size: 14px;
  line-height: 1.6;
  color: #666;
  flex: 1;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.label {
  width: 200rpx;
  font-size: 28rpx;
}

.input {
  flex: 1;
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 5px;
}

.btn-calculate {
  width: 100%;
  background-color: #07c160;
  color: white;
  margin-top: 20px;
}

.result-area {
  margin-top: 30px;
  padding: 20px;
  background-color: #ffffff;
  border-radius: 5px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.result-title {
  font-size: 16px;
  font-weight: bold;
}

.result-value {
  font-size: 18px;
  color: #e64340;
}

.btn-copy {
  margin-top: 15px;
  background-color: #1989fa;
  color: white;
  font-size: 14px;
  padding: 8px 20px;
  border-radius: 20px;
  width: auto;
  display: inline-block;
}

.btn-copy:hover {
  background-color: #0570d1;
}

.detail-toggle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  margin: 20rpx 0;
  border-top: 1px solid #e0e0e0;
  cursor: pointer;
}

.detail-toggle-text {
  font-size: 28rpx;
  color: #1989fa;
}

.detail-toggle-icon {
  font-size: 24rpx;
  color: #1989fa;
  transition: transform 0.3s ease;
}

.detail-process {
  background-color: #ffffff;
  border: 1px solid #e9ecef;
  border-radius: 8rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  animation: slideDown 0.3s ease-in-out;
  text-align: left;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.detail-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-line;
  font-family: 'Courier New', monospace;
  text-align: left;
}

@keyframes slideDown {
  from {
    opacity: 0;
    max-height: 0;
    padding: 0 15px;
  }
  to {
    opacity: 1;
    max-height: 1000px;
    padding: 0 15px 15px 15px;
  }
}

@keyframes slideUp {
  from {
    opacity: 1;
    max-height: 1000px;
    padding: 0 15px 15px 15px;
  }
  to {
    opacity: 0;
    max-height: 0;
    padding: 0 15px;
  }
}

.title {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 10px;
  text-align: center;
}

.title-annotation {
  font-size: 14px;
  font-weight: normal;
  color: #666;
  margin-top: 5px;
  line-height: 1.4;
}
